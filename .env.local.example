# Supabase (public - safe to expose in browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase (secret - server-side only, bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# WhatsApp Cloud API (Meta)
WA_TOKEN=your-permanent-access-token
WA_PHONE_NUMBER_ID=your-phone-number-id
WA_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WA_API_VERSION=v22.0

# Webhook verification token (any secret string you choose)
# Must match what you set in Meta Developer Console > Webhooks
WA_WEBHOOK_VERIFY_TOKEN=your-secret-verify-token
